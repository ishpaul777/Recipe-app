<div class= "w-100 d-flex flex-column justify-content-center align-items-center" >
  <h2>Add Recipe</h2>
  <%= form_with model: [@recipe, @recipe_food], url: recipe_recipe_foods_path, class: 'form-group w-25'  do |form| %>
    <div class="field">
      <%= form.label :quantity, class:"form-label" %>
      <%= form.number_field :quantity, class:"form-control" %>
    </div>
		<div class="field">
		  <%= form.label :food, class:"form-label mt-3 w-100" %>
		  <%= form.select :food_id,  @foods.map { |food| [food.name, food.id] }, {} , {class:"form-select w-100"} %>
		</div>
    <div class="d-flex justify-content-between">
      <%= form.submit "Add Food", class: "btn btn-primary mt-3" %>
    </div>
    
  <% end %>
</div>
