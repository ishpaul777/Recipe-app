<main class="w-100 d-flex flex-column  justify-content-center align-items-center align-items-center">
	<h2>Public Recipes</h2>
<div class="d-flex flex-column w-50">
  <% @recipes.each do |recipe| %>
      <div class="container d-flex justify-content-between m-4 border">
      <div class="d-flex">
        <%= link_to recipe.name, recipe_path(recipe.id) %>
      </div>

        <span class="card-text fw-bold">Total food items: <%= recipe.recipe_foods.length %> </span
        <% if can? :destroy, recipe %>
          <%= button_to 'Remove',
            recipe_path(recipe), method: :delete, class: "btn btn-danger
            text-decoration-none" %> 
          <% end %>
      </div>
  <% end %>
  </div>
</main>